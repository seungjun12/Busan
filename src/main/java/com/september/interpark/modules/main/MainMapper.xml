<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper      
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.september.interpark.modules.main.MainMapper">

    <resultMap id="resultMapObj" type="com.september.interpark.modules.main.Main"></resultMap>
	
	<select id="selectList" resultMap="resultMapObj">
		SELECT
			a.gameseq
			,a.dob
			,a.ground
			,a.time
			,a.whoHome
			,a.whoAway
		FROM games a	
	</select>
	
	<!-- 경기장 좌석 선택 -->
	<select id="selectListSeatGrade" resultMap="resultMapObj">
		SELECT 
			a.seatSeq
			,a.seatGrade
			<!-- ,b.whoHome
			,b.whoAway -->
		FROM seat a	
		<!-- LEFTJOIN games b on  -->
	</select>
	
	<!-- 관리자_경기정보입력폼1 -->
	<insert id="insert">
		INSERT INTO games(
			whoHome
			,whoAway
			,dob
			,time
			,ground
		)
		VALUES(
			#{whoHome}
			,#{whoAway}
			,#{dob}
			,#{time}
			,#{ground}
		)
		<selectKey resultType="String" keyProperty="gameseq" order="AFTER">
			SELECT last_insert_id()
		</selectKey>
	</insert>
	
	<select id="viewList" resultMap="resultMapObj">
		SELECT
			a.*
		FROM team a
		WHERE 1=1	
	</select>
	
	<select id="selectOne" resultMap="resultMapObj">
		SELECT
			a.*
		FROM games a
		WHERE 1=1
			AND gameseq = #{gameseq}		
	</select>

</mapper>