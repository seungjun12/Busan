<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper      
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.september.interpark.modules.main.MainMapper">

    <resultMap id="resultMapObj" type="com.september.interpark.modules.main.Main"></resultMap>
	
	
	<!-- 공통 -->
	<sql id="selectCommon">
		FROM game a
		WHERE 1=1
		<if test="shdelNy != null and !shdelNy.equals('')">AND delNy = #{shdelNy}</if>
	 	<choose>
			<when test="shOption == 1">AND gameseq = #{shValue}</when>
			<when test="shOption == 2">AND date LIKE CONCAT('%',#{shValue},'%')</when>
			<when test="shOption == 3">AND where LIKE CONCAT('%',#{shValue},'%')</when>
			<otherwise></otherwise>
		</choose>
	</sql>
	
	<!-- 관리자_게임리스트 -->
	<select id="selectList" resultMap="resultMapObj">
		SELECT
			a.*
		<include refid="selectCommon"/>
	</select>
	
	<!-- 관리자_폼_경기장선택 -->
	<select id="viewList" resultMap="resultMapObj">
		SELECT
			a.*
		FROM teamName a	
	</select>
	
	<!-- 관리자_게임등록 -->
	<insert id="gameInst">
		INSERT INTO game(
			whoHome
			,whoAway
			,date
			,time
			,ground
			,gameDelNy
		)
		VALUES(
			#{whoHome}
			,#{whoAway}
			,#{date}
			,#{time}
			,#{ground}
			,1
		)
		<selectKey resultType="String" keyProperty="gameSeq" order="AFTER">
			SELECT last_insert_id()
		</selectKey>
	</insert>
	
	<select id="selectOne" resultMap="resultMapObj">
		SELECT
			a.*
		FROM game a
		WHERE 1=1
			AND gameSeq = #{gameSeq}	
	</select>
	
	
	
	
</mapper>